{
    "plugins": [
        "jsx-a11y",
        "solid"
    ],
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsx-a11y/strict",
        "plugin:solid/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "ignorePatterns": [
        "node_modules/**/*",
        "dist/**/*"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}